{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!.github", "!data", "!renderer/assets", "!test-results"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noImportantStyles": "off"
			},
			"style": {
				"useFilenamingConvention": "off",
				"noDescendingSpecificity": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["electron/**"],
			"linter": {
				"enabled": true,
				"rules": {
					"style": {
						"noCommonJs": "off",
						"noProcessEnv": "off"
					},
					"correctness": {
						"noNodejsModules": "off",
						"noProcessGlobal": "off",
						"noGlobalDirnameFilename": "off"
					}
				}
			}
		},
		{
			"includes": ["renderer/scripts/**", "renderer/pages/**"],
			"linter": {
				"enabled": true,
				"rules": {
					"style": {
						"noCommonJs": "on",
						"useFilenamingConvention": "off"
					}
				}
			}
		}
	]
}
