{
	"name": "fizbanes-forge",
	"productName": "Fizbane's Forge",
	"version": "1.0.0",
	"description": "Fizbane's Forge - A comprehensive Dungeons & Dragons character creator application",
	"main": "./app/main.js",
	"type": "module",
	"scripts": {
		"start": "electron .",
		"start:debug": "cross-env FF_DEBUG=true electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"postinstall": "electron-builder install-app-deps && node setup-assets.js",
		"setup": "node setup-assets.js",
		"check:format": "biome format",
		"check:lint": "biome lint",
		"format": "biome format --write .",
		"lint": "biome lint --write ."
	},
	"build": {
		"appId": "fizbanes.forge",
		"mac": {
			"icon": "./app/img/icon.icns",
			"category": "public.app-category.utilities",
			"target": "dmg"
		},
		"win": {
			"icon": "./app/img/icon.ico",
			"target": "portable"
		},
		"linux": {
			"icon": "./app/img/icon.png",
			"target": "appImage"
		},
		"nsis": {
			"oneClick": false,
			"installerIcon": "./app/img/icon.ico",
			"uninstallerIcon": "./app/img/icon.ico",
			"uninstallDisplayName": "Fizbane's Forge",
			"license": "license.txt",
			"allowToChangeInstallationDirectory": true
		},
		"portable": {
			"splashImage": "./app/img/splash.bmp"
		},
		"appImage": {
			"license": "license.txt"
		}
	},
	"author": "Author",
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@playwright/test": "^1.56.1",
		"cross-env": "^10.1.0",
		"electron": "latest",
		"electron-builder": "latest",
		"electronmon": "latest"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^6.5.1",
		"bootstrap": "^5.3.2",
		"uuid": "^9.0.1"
	}
}
