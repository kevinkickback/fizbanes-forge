{
	"name": "fizbanes-forge",
	"productName": "Fizbane's Forge",
	"version": "0.1.0",
	"description": "Fizbane's Forge - A comprehensive Dungeons & Dragons character creator application",
	"main": "./src/main/Main.js",
	"type": "module",
	"scripts": {
		"start": "electron .",
		"clear": "node ./clear-cache.cjs && electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"postinstall": "electron-builder install-app-deps && node setup-assets.js",
		"setup": "node setup-assets.js",
		"check:format": "biome format",
		"check:lint": "biome lint",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test"
	},
	"build": {
		"appId": "fizbanes.forge",
		"mac": {
			"icon": "./app/img/icon.icns",
			"category": "public.app-category.utilities",
			"target": "dmg"
		},
		"win": {
			"icon": "./src/ui/assets/images/icon.ico",
			"target": "portable"
		},
		"linux": {
			"icon": "./app/img/icon.png",
			"target": "appImage"
		},
		"nsis": {
			"oneClick": false,
			"installerIcon": "./src/ui/assets/images/icon.ico",
			"uninstallerIcon": "./src/ui/assets/images/icon.ico",
			"uninstallDisplayName": "Fizbane's Forge",
			"license": "license.txt",
			"allowToChangeInstallationDirectory": true
		},
		"portable": {
			"splashImage": "./src/ui/assets/images/splash.bmp"
		},
		"appImage": {
			"license": "license.txt"
		}
	},
	"author": "Kevin Kickback",
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@playwright/test": "^1.56.1",
		"@vitest/ui": "^2.1.9",
		"electron": "latest",
		"electron-builder": "latest",
		"electronmon": "latest",
		"jsdom": "^28.0.0",
		"vitest": "^2.1.9"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^6.5.1",
		"5etools-utils": "^0.14.22",
		"bootstrap": "^5.3.2",
		"dotenv": "^17.2.4",
		"electron-store": "^11.0.2",
		"eventemitter3": "^5.0.4",
		"immer": "^11.1.3",
		"uuid": "^9.0.1",
		"zod": "^4.3.5"
	}
}
